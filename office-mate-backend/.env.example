# ============================================
# Application Configuration
# ============================================
APPLICATION_NAME=officemate
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# ============================================
# PostgreSQL Configuration (Primary Database)
# ============================================
POSTGRES_URL=jdbc:postgresql://localhost:5432/officemate_dev
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_POOL_SIZE=10
POSTGRES_MIN_IDLE=5
POSTGRES_CONNECTION_TIMEOUT=30000
POSTGRES_IDLE_TIMEOUT=600000
POSTGRES_MAX_LIFETIME=1800000

# ============================================
# MongoDB Configuration (Migration Support)
# ============================================
MONGODB_URI=mongodb://localhost:27017/officemate_dev
MONGODB_DATABASE=officemate_dev

# ============================================
# Redis Configuration (Session & OTP Cache)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000
REDIS_POOL_MAX_ACTIVE=8
REDIS_POOL_MAX_IDLE=8
REDIS_POOL_MIN_IDLE=0
REDIS_POOL_MAX_WAIT=-1

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:4566
DYNAMODB_TABLE_PREFIX=dev
DYNAMODB_TABLE_ROUTE_PREFERENCES=route_preferences
DYNAMODB_TABLE_USER_MATCHING=user_matching
DYNAMODB_TABLE_REAL_TIME_LOCATION=real_time_location
DYNAMODB_READ_CAPACITY=1
DYNAMODB_WRITE_CAPACITY=1

# SNS Configuration (SMS Delivery)
SNS_SENDER_ID=OfficeMate-Dev
SNS_SMS_TYPE=Transactional
SNS_MAX_PRICE=0.50

# SES Configuration (Email Delivery)
SES_FROM_EMAIL=dev@officemate.local
SES_FROM_NAME=OfficeMate Dev
SES_CONFIGURATION_SET=

# KMS Configuration (Encryption)
KMS_KEY_ID=dev-key-id
KMS_KEY_ALIAS=alias/officemate-dev

# ============================================
# Security Configuration
# ============================================
# JWT Configuration
JWT_SECRET=dev-secret-key-for-local-development-only-change-in-production
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=86400000

# Account Lockout Configuration
SECURITY_MAX_FAILED_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION=30
SECURITY_SUSPICIOUS_THRESHOLD=10

# Pattern Monitoring
PATTERN_MONITORING_ENABLED=true

# ============================================
# OTP Configuration
# ============================================
OTP_LENGTH=6
OTP_EXPIRATION_MINUTES=5
OTP_MAX_ATTEMPTS=5

# Email OTP Configuration
EMAIL_OTP_EXPIRATION_MINUTES=10
EMAIL_MAX_ATTEMPTS=5
EMAIL_RESEND_COOLDOWN=60

# ============================================
# Rate Limiting Configuration
# ============================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_OTP=5
RATE_LIMIT_LOGIN=10
RATE_LIMIT_API=60

# ============================================
# CAPTCHA Configuration
# ============================================
CAPTCHA_ENABLED=false
CAPTCHA_SITE_KEY=
CAPTCHA_SECRET_KEY=

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_EXPOSED_HEADERS=Authorization,Content-Type
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ============================================
# Validation Configuration
# ============================================
VALIDATION_ENABLED=true
PHONE_DEFAULT_REGION=US
PHONE_INTERNATIONAL_ONLY=true
BLOCKED_EMAIL_DOMAINS=gmail.com,yahoo.com,hotmail.com
MIN_DOMAIN_LENGTH=4
TEXT_MAX_LENGTH=1000
ALLOW_HTML=false
ALLOW_SPECIAL_CHARS=true
LICENSE_PLATE_REGION=US
LICENSE_PLATE_MIN_LENGTH=2
LICENSE_PLATE_MAX_LENGTH=10

# ============================================
# Vehicle Configuration
# ============================================
VEHICLE_TYPES_ALLOWED=CAR,MOTORCYCLE,SCOOTER,BICYCLE
FUEL_TYPES_ALLOWED=PETROL,DIESEL,ELECTRIC,HYBRID,CNG
CAR_CAPACITY_MIN=1
CAR_CAPACITY_MAX=7
MOTORCYCLE_CAPACITY_MIN=1
MOTORCYCLE_CAPACITY_MAX=2
SCOOTER_CAPACITY_MIN=1
SCOOTER_CAPACITY_MAX=2
BICYCLE_CAPACITY_MIN=1
BICYCLE_CAPACITY_MAX=1

# ============================================
# Profile Configuration
# ============================================
DRIVER_MAX_DETOUR_DISTANCE=500
DRIVER_LICENSE_VERIFICATION_REQUIRED=false
RIDER_GENDER_PREFERENCES_ALLOWED=FEMALE_ONLY,MALE_SINGLE_FEMALE,MALE_ALL_FEMALE,NO_PREFERENCE
RIDER_MAX_FAVORITE_DRIVERS=10

# ============================================
# Session Configuration
# ============================================
MAX_CONCURRENT_SESSIONS=5
TOKEN_BLACKLIST_CLEANUP_HOURS=24

# ============================================
# Cancellation Tracking Configuration
# ============================================
CANCELLATION_TRACKING_ENABLED=true
CANCELLATION_MAX_PER_MONTH=5
CANCELLATION_SUSPENSION_MONTHS=3

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=DEBUG
SECURITY_LOG_LEVEL=DEBUG
SQL_LOG_LEVEL=DEBUG
SQL_BIND_LOG_LEVEL=TRACE
HIBERNATE_STATS=true

# ============================================
# JPA/Hibernate Configuration
# ============================================
DDL_AUTO=update
SHOW_SQL=true

# ============================================
# H2 Console (Development Only)
# ============================================
H2_CONSOLE_ENABLED=true

# ============================================
# HTTP Configuration
# ============================================
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB
FILE_SIZE_THRESHOLD=1MB
MAX_HTTP_HEADER_SIZE=8KB
MAX_HTTP_FORM_POST_SIZE=2MB
MAX_SWALLOW_SIZE=2MB
TOMCAT_CONNECTION_TIMEOUT=20000
TOMCAT_MAX_THREADS=200
TOMCAT_MIN_SPARE_THREADS=10
